{$R *.dfm}

procedure Trocar(var str :string; i, j : Integer);
var
  temp: Char;
begin
  temp   := str[i];
  str[i] := str[j];
  str[j] := temp;
end;

procedure GerarAnagramas(prefixo, str: string; memo: TMemo);
var
  i: Integer;
begin
  if str = '' then
    memo.Lines.Add(prefixo)
  else
  begin
    for i := 1 to Length(str) do
    begin
      Trocar(str, 1, i);
      GerarAnagramas(prefixo + str[1], Copy(str, 2, MaxInt), memo);
      Trocar(str, 1, i);
    end;
  end;
end;


procedure AnagramaX(palavra : string; memo: TMemo);
begin
  memo.Lines.Clear;
  GerarAnagramas('', palavra, memo);

end;

procedure TForm1.Button1Click(Sender: TObject);
begin
  AnagramaX(EditPalin.Text, Memo1);
end;

end.
