unit NumerosPrimos;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm1 = class(TForm)
    Edit1: TEdit;
    Edit2: TEdit;
    Button1: TButton;
    Label1: TLabel;
    procedure Button1Click(Sender: TObject);
    procedure Edit1KeyPress(Sender: TObject; var Key: Char);
    procedure Edit2KeyPress(Sender: TObject; var Key: Char);
  private
    { Private declarations }
    function EhPrimo(numero: Integer): Boolean;
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Edit1KeyPress(Sender: TObject; var Key: Char);
begin
  if not (key in ['0'..'9', #8]) then
  Key := #0;
end;

procedure TForm1.Edit2KeyPress(Sender: TObject; var Key: Char);
begin
  if not (key in ['0'..'9', #8]) then
  Key := #0;
end;

function TForm1.EhPrimo(numero : integer) : Boolean;
var
  i: Integer;
begin
  if numero <= 1 then
    Result := False
  else if numero <= 3 then
    Result := True
  else if (numero mod 2 = 0) or (numero mod 3 = 0) then
    Result := False
  else
  begin
    i := 5;
    while (i * i <= numero) do
    begin
      if (numero mod i = 0) or (numero mod (i + 2) = 0) then
      begin
        Result := False;
        Exit;
      end;
      Inc(i, 6);
    end;
    Result := True;
  end;
end;


procedure TForm1.Button1Click(Sender: TObject);
var
  x, y, count: Integer;
  i: Integer;
begin
  x := StrToInt(Edit1.Text);
  y := StrToInt(Edit2.Text);

  if x >= y then
  begin
    Label1.Caption := 'x deve ser menor que y. Tente novamente.';
    Exit;
  end;

  count := 0;
  for i := x to y do
  begin
    if EhPrimo(i) then
      Inc(count);
  end;

  Label1.Caption := Format('Existem %d números primos entre %d e %d', [count, x, y]);
end;

{function TForm1.ContarPrimos(x, y : Integer) : Integer;
var
  i, contador : Integer;
begin
  contador := 0;
  for i := x to y do
    begin
      if EhPrimo(i) then
        Inc(contador);
    end;
    Result := contador;
end;

 }


end.
